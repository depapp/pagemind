{
  "manifest_version": 3,
  "name": "PageMind - AI Page Summarizer",
  "version": "1.0.0",
  "description": "Summarize any webpage with AI and share summaries in real-time using Redis caching",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "downloads",
    "contextMenus",
    "alarms",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_title": "Open PageMind",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
